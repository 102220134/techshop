{
  "name": "Java 17 Dev",
  "image": "mcr.microsoft.com/devcontainers/java:17-bullseye",

  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y maven",

  "forwardPorts": [8080],

  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "vscjava.vscode-maven"
      ]
    }
  }
}
