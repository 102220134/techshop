{
  "name": "Java 17 Dev",
  "image": "mcr.microsoft.com/devcontainers/java:17",

  "features": {
    "ghcr.io/devcontainers/features/maven:1": {}
  },

  "postCreateCommand": "java -version && mvn -v",

  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "vscjava.vscode-maven"
      ]
    }
  },

  "forwardPorts": [8080],
  "remoteUser": "vscode"
}
